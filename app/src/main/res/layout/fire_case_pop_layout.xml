<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_firecoming_level4_5"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/fire_case_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="测试"/>
    <LinearLayout
        android:layout_marginTop="202px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pop_case_desc"
            android:textIsSelectable="true"
            android:text="海雅缤纷城5楼宴会厅"
            android:maxLines="2"
            android:textSize="@dimen/font_leve1_60px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/pop_case_dept"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/font_normal_46px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_0_case_info_pop_bg"
            android:text="保安中队"/>
        <LinearLayout
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_case_level"
                android:textColor="#ff0700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal_46px"
                android:text="五级"/>
            <ImageView
                android:id="@+id/level_icon_1"
                android:layout_marginLeft="20px"
                android:background="@drawable/fire_lv4_5_72_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/level_icon_2"
                android:layout_marginLeft="20px"
                android:background="@drawable/fire_lv4_5_72_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/level_icon_3"
                android:layout_marginLeft="20px"
                android:background="@drawable/fire_lv4_5_72_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/level_icon_4"
                android:layout_marginLeft="20px"
                android:background="@drawable/fire_lv4_5_72_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/level_icon_5"
                android:layout_marginLeft="20px"
                android:background="@drawable/fire_lv4_5_72_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:paddingLeft="100px"
        android:layout_marginRight="100px"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="114dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:background="@null"
            android:drawableTop="@drawable/sel_0_reject"
            android:id="@+id/fire_case_no_copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/fire_case_no_copy"
            android:textColor="@color/white"
            android:layout_marginEnd="53dp"
            android:textSize="@dimen/font_normal_46px"
             />

        <Button
            android:background="@null"
            android:drawableTop="@drawable/sel_0_receive"
            android:id="@+id/fire_case_copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/fire_case_copy"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_46px"
             />
    </LinearLayout>
    <!--
        <Button
            android:background="@null"
            android:drawableTop="@drawable/sel_0_reject"
            android:layout_marginLeft="168px"
            android:id="@+id/fire_case_no_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fire_case_no_copy"
            android:textColor="@color/white"
            android:layout_marginEnd="53dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/fire_case_copy" />
    -->
</RelativeLayout>